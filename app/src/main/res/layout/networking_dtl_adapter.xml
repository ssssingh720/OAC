<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_approval"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--tools:showIn="@layout/networking_option_adapter"-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        card_view:cardElevation="5dp"
        android:background="@color/light_underline_color"
        android:elevation="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/lnrNetworkingDtl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center|left|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSpeakerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="ABC Xyz"
                    android:textColor="@color/dark_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSpeakerDesig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="ABC Xyz"
                    android:textColor="@color/dark_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSpeakerTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:maxLines="2"
                    android:text="ABC Xyz"
                    android:textColor="@color/dark_black"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/lnrChattingView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/trans"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/lnrAdaCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/call"
            android:gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgAdaChat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/chat"
            android:gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/lnrAdaMail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/sms_msg"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>